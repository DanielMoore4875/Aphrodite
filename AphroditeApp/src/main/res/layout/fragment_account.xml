<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_oak"
    tools:context=".ui.account.AccountFragment"
    tools:layout_editor_absoluteX="-28dp"
    tools:layout_editor_absoluteY="160dp">

    <Button
        android:id="@+id/AF_Button_settings"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AF_Button_settings"
        android:textColor="@color/mid_ocean"
        app:icon="@drawable/manage"
        app:iconSize="22dp"
        app:iconTint="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/AF_Button_logout"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/peach"
        android:text="@string/AF_Button_logout"
        android:textColor="@color/light_oak"
        app:icon="@drawable/logout"
        app:iconSize="25dp"
        app:iconTint="@color/light_oak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659"
        app:rippleColor="@color/dark_ocean"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/AF_Button_about"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AF_Button_about"
        android:textColor="@color/mid_ocean"
        app:icon="@drawable/about"
        app:iconTint="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/AF_TextView_username"
        android:layout_width="375dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/peach"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/AF_TextView_username"
        android:textAlignment="center"
        android:textColor="@color/light_oak"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <ImageView
        android:id="@+id/AF_ImageView_profilepicture"
        android:layout_width="139dp"
        android:layout_height="124dp"
        android:background="@color/light_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/profile"
        tools:src="@tools:sample/avatars" />



    <Button
        android:id="@+id/AF_Button_support"
        android:layout_width="375dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AF_Button_support"
        android:textColor="@color/mid_ocean"
        app:icon="@drawable/support"
        app:iconTint="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441"
        app:rippleColor="@color/mid_ocean"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>