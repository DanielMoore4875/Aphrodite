<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_oak"
    tools:context=".ui.account.AccountFragment"
    tools:layout_editor_absoluteX="-28dp"
    tools:layout_editor_absoluteY="160dp">


    <Button
        android:id="@+id/AF_Button_settings"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AF_Button_settings"
        android:textColor="@color/mid_ocean"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/manage"
        app:iconGravity="textStart"
        app:iconSize="22dp"
        app:iconTint="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AF_Button_support"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/lighter_oak"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/AF_Button_logout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/peach"
        android:text="@string/AF_Button_logout"
        android:textColor="@color/lighter_oak"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_logout_24"
        app:iconGravity="textStart"
        app:iconSize="25dp"
        app:iconTint="@color/lighter_oak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AF_Button_settings"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/lighter_oak"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/AF_Button_about"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AF_Button_about"
        android:textColor="@color/mid_ocean"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/about"
        app:iconGravity="textStart"
        app:iconTint="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AF_TextView_username"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/lighter_oak"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/AF_TextView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/AF_TextView_username"
        android:textAlignment="center"
        android:textColor="@color/dark_ocean"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AF_ImageView_profilepicture"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/AF_ImageView_profilepicture"
        android:layout_width="139dp"
        android:layout_height="124dp"
        android:layout_marginTop="50dp"
        android:background="@color/light_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/AF_Button_support"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AF_Button_support"
        android:textColor="@color/mid_ocean"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/support"
        app:iconGravity="textStart"
        app:iconSize="22dp"
        app:iconTint="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AF_Button_about"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/lighter_oak"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>