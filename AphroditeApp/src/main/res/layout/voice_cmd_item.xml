<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--    android:fillViewport="true"-->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_oak"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context=".ui.voice.VoiceFragment">


            <TextView
                android:id="@+id/VC_cmdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/VC_name_marginStart"
                android:text="@string/VC_placeholder_vcName_txt"
                android:textColor="@color/dark_ocean"
                android:textSize="@dimen/VC_title_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/VC_cmdDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/VC_desc_marginStart"
                android:layout_marginTop="@dimen/VC_desc_marginTop"
                android:text="@string/VC_placeholder_vcDesc_txt"
                android:textColor="@color/mid_ocean"
                android:textSize="@dimen/VC_title_font_size" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>