<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_oak"
    tools:context=".ui.create_layout.ChooseModuleLocFragment">

    <TextView
        android:id="@+id/CLF_TextView_weather"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_calender"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CLF_TextView_temphum"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_temphum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_weather"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CLF_TextView_stocks"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_stocks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_temphum"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CLF_TextView_youtube"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_youtube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_stocks"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CLF_TextView_notifs"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_notifications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_youtube"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CLF_TextView_date"
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_time"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CLF_TextView_calender"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_calender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CLF_TextView_date"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_weather"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_weather"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_calender"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_stocks"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_stocks"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_temp_hum"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_youtube"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_youtube"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_stocks"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_notif"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_notifs"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_youtube"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_temp_hum"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_temphum"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_weather"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_date"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_date"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_time"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ML_CreateLayout_PT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/ML_ChooseModule_PageName"
        android:textColor="@color/dark_ocean"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ML_LayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/ML_ChosenLayout_Name"
        android:textColor="@color/dark_ocean"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/CLF_TextView_time"
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/CLF_TextView_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ML_LayoutName"
        app:layout_constraintVertical_bias="0.001" />

    <Spinner
        android:id="@+id/CLF_spinner_time"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:dropDownWidth="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_time"
        app:layout_constraintTop_toBottomOf="@+id/ML_LayoutName"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/CLF_spinner_calender"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/CLF_TextView_calender"
        app:layout_constraintTop_toBottomOf="@+id/CLF_spinner_date"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/CLF_Button_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/Button_height"
        android:layout_marginStart="@dimen/LED_slider_startEnd"
        android:layout_marginEnd="@dimen/LED_slider_startEnd"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/ML_SaveButton"
        android:textColor="@color/mid_ocean"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/lighter_oak" />

</androidx.constraintlayout.widget.ConstraintLayout>