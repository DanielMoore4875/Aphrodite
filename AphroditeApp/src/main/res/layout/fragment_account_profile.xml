<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AFP_Plaintext_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan"
    tools:context=".ui.account.AccountFragment"
    tools:layout_editor_absoluteX="-28dp"
    tools:layout_editor_absoluteY="160dp">

    <ImageView
        android:id="@+id/AFP_ImageView_logo"
        android:layout_width="125dp"
        android:layout_height="123dp"
        android:background="@drawable/roundcorner_darkmodegrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/aphrodite_logot_trans_med" />

    <TextView
        android:id="@+id/AFP_TextView_title"
        android:layout_width="210dp"
        android:layout_height="39dp"
        android:background="@drawable/roundcorner_peach"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/AFP_TextView_title"
        android:textColor="@color/light_oak"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <ImageView
        android:id="@+id/AFP_ImageView_Profile"
        android:layout_width="121dp"
        android:layout_height="103dp"
        android:background="@drawable/roundcorner_lightocean"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <EditText
        android:id="@+id/AFP_EditText_name"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:background="@drawable/roundcorner_peach"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/AFP_Edit_Text_name"
        android:textColor="@color/light_oak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515" />

    <Button
        android:id="@+id/AFP_Button_Submit"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/light_ocean"
        android:text="@string/AFP_Button_submit"
        android:textColor="@color/mid_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.823" />

</androidx.constraintlayout.widget.ConstraintLayout>