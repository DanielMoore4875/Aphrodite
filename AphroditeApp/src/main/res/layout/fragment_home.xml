<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE1D2"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/H_HomeTitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/amiko"
        android:text="@string/HO_HomePage_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/dark_ocean"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/light_ocean"
        android:text="morning"
        android:textColor="@color/peach"
        app:cornerRadius="10dp"
        app:icon="@drawable/sun_button_oak"
        app:iconGravity="textTop"
        app:iconTint="@color/peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/H_HomeTitle_title"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button6"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="@color/light_ocean"
        android:text="child"
        android:textColor="@color/peach"
        app:cornerRadius="10dp"
        app:icon="@drawable/child_button_peach"
        app:iconGravity="textTop"
        app:iconTint="@color/peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button7"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="@color/peach"
        android:text="add"
        android:textColor="@color/light_ocean"
        app:cornerRadius="10dp"
        app:icon="@drawable/add_button_oak"
        app:iconGravity="textTop"
        app:iconTint="@color/light_ocean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button5"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/light_ocean"
        android:text="night"
        android:textColor="@color/peach"
        app:cornerRadius="10dp"
        app:icon="@drawable/night_button_peach"
        app:iconGravity="textTop"
        app:iconTint="@color/peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/H_HomeTitle_title"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>