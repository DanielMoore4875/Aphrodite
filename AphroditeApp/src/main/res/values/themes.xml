<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Aphrodite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_ocean</item>
        <item name="colorPrimaryVariant">@color/mid_ocean</item>
        <item name="colorOnPrimary">@color/dark_ocean</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oak</item>
        <item name="colorSecondaryVariant">@color/light_oak</item>
        <item name="colorOnSecondary">@color/peach</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/light_ocean</item>
        <item name="colorPrimaryDark">@color/dark_ocean</item>
        <item name="colorAccent">@color/peach</item>
        <item name="android:statusBarColor">@color/mid_ocean</item>
    </style>

    <!--BUTTON STYLE REGISTRATION BUTTONS-->
    <style name="RegisterPageItems" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_ocean</item>
    </style>

    <!--Switch Colour State-->
    <style name="StateCSwitch" parent="Theme.AppCompat.Light">
        <!--active thumb & track color (30% transparency)-->
        <item name="colorControlActivated">@color/peach</item>
        <!--inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/light_ocean</item>
    </style>

</resources>